<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subSec"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="8dp"
        app:layout_constraintWidth_percent="0.45"
        android:background="@drawable/white_frame"
        android:layout_margin="8dp"
      app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <View
            android:id="@+id/topBackground"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/light_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBoy"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvBoyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Name "
            android:layout_marginTop="4dp"
            android:textAllCaps="true"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/topBackground"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvBoyNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9089009087"
            android:layout_marginTop="4dp"
            android:autoLink="phone"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/cairo_regular"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvBoyName"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvBoyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_medium"
            android:text="B101"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/topBackground"
            app:layout_constraintTop_toTopOf="@id/topBackground" />

        <TextView
            android:id="@+id/tvStopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_regular"
            android:textStyle="italic"
            android:text="Pickup Point"
            android:textColor="@color/ocean_blue"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvBoyName"
            app:layout_constraintTop_toBottomOf="@id/tvBoyNumber" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:src="@drawable/delete"
            android:text="Buy"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>