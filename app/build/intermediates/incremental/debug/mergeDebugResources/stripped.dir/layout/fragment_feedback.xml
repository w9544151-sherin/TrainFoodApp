<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tint_white"
    tools:context=".Passenger.FeedbackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:elevation="4dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="Complaint/Feedback"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etFeedback"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/input_holder"
            android:hint="Type your feedbacks or suggestions.... "
            android:textSize="16sp"

            android:inputType="textPersonName"
            android:maxLines="5"
            android:padding="10dp"
            android:textColor="@color/ocean_blue"
            android:textColorHint="@color/black" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnAddComplaint"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/app_btn"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="20sp"
            />

    </LinearLayout>
</FrameLayout>