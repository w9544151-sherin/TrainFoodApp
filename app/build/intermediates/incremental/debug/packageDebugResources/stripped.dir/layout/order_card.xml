<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/curved">
    <ImageView
        android:id="@+id/dboyimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:background="@color/tint_white"
        android:padding="4dp"
        android:src="@drawable/delivery_man__1_"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@color/ocean_blue"
        android:padding="4dp"
        android:src="@drawable/foodmenu2"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@color/ocean_blue"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintEnd_toEndOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image" />
    <TextView
        android:id="@+id/tvFoodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"
        android:text="Rs - 250/-"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@+id/image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFoodname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/cairo_bold"
        android:text="Item Name "
        android:textColor="@color/ocean_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/dboyimage"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="@+id/image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_bold"
        android:text="Quantity :- 2"
        android:textColor="@color/ocean_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/tvFoodname" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_bold"
        android:text="Total Amount: 250 * 2"
        android:textColor="@color/ocean_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantity"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBillingAddress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/cairo_bold"
        android:text="Billing Address"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalPrice" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_semi_bold"
        android:text="User Name : "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/tvBillingAddress" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/cairo_light"
        android:text="Name of a particular user"
        android:textColor="@color/ocean_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/labelUsername"
        app:layout_constraintTop_toBottomOf="@+id/tvBillingAddress" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_semi_bold"
        android:text="Mobile  : "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/labelUsername" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUserPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:autoLink="phone"
        android:fontFamily="@font/cairo_light"
        android:text="9567563300"
        android:textColor="@color/ocean_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        app:layout_constraintTop_toTopOf="@id/labelUserPhone" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelSeatInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_semi_bold"
        android:text="Seat Info : "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/labelUserPhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSeatInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/cairo_light"
        android:text="16349/S6/55"
        android:textColor="@color/ocean_blue"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        app:layout_constraintTop_toTopOf="@id/labelSeatInfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnDelivered"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/app_btn"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Delivered"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeatInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>