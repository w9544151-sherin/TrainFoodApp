<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curved"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvTrainNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16349"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/cairo_bold"
        android:textColor="@color/black"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvTrainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rajya Rani Express"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:fontFamily="@font/cairo_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTrainNumber"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvTrainPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KCVL to NIL"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTrainName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:src="@drawable/delete"
        android:text="Buy"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>