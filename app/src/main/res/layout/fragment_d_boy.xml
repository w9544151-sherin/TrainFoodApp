    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dboylist"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:alpha="0.8"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/addSymbol"
        app:srcCompat="@drawable/sort" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/white_frame"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Delivery Boys"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dboylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@+id/dboylist" />


