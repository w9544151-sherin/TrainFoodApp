<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ocean_blue"
    tools:context=".admin.StopListFragment">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="find The Stop List"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/etTrainNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:layout_marginEnd="24dp"
        android:background="@drawable/input_holder"
        android:hint="Train Number"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
      app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHead" />
    <EditText
        android:id="@+id/trainPath"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/input_holder"
        android:hint="Select Train Route"
        android:textSize="16sp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTrainNumber" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnFindStop"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/app_btn"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Find Stop"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trainPath" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFindStop"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/stop_card" />


</androidx.constraintlayout.widget.ConstraintLayout>